extends layout

block content
    h1= title
    if userpage
        p= userpage.username + "'s page."
        p This is where user data would be shown.
        if userpage.lasergameLevels
            each level, i in userpage.lasergameLevels
                li
                    a(href='/lasergame?username=' + userpage.username + '&level=' + i) #{level.name} - #{level.uploadTime} - #{level.solutions}
    else
        p Something is wrong and there's nothing here!
