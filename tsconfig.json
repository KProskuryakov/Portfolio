{
  "compilerOptions": {
    "module": "amd",
    "moduleResolution": "node",
    "target": "es5",
    "removeComments": true,
    "preserveConstEnums": true,
    "allowSyntheticDefaultImports": false,
    "strict": true,
    "strictNullChecks": false,
    "sourceMap": true,
    "baseUrl": "./src",
    "outDir": "./js",
    "rootDir": "./src",
    "lib": [
      "dom",
      "es5",
      "es2015.promise"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}