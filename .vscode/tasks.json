{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "0.1.0",
  "tasks": [
    {
      "taskName": "tsc",
      "command": "tsc",
      "args": ["-w"],
      "isShellCommand": true,
      "isBackground": true,
      "problemMatcher": "$tsc-watch",
      "isBuildCommand": true
    },
    {
      "taskName": "webpack",
      "command": "webpack",
      "options": {
        "cwd": "${workspaceRoot}/websrc/lasergame-ts"
      },
      "isShellCommand": true,
      "isBuildCommand": true
    }
  ]
}



